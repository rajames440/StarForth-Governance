# StarForth Governance Configuration
# Environment variables for document vault locations and workflow paths

# Repository locations
export STARFORTH_REPO="${STARFORTH_REPO:-/home/rajames/CLionProjects/StarForth}"
export STARFORTH_GOVERNANCE_REPO="${STARFORTH_GOVERNANCE_REPO:-/home/rajames/CLionProjects/StarForth-Governance}"

# Vault directories in StarForth-Governance
export VAULT_INBOX="${STARFORTH_GOVERNANCE_REPO}/in_basket"

# Template directories in StarForth
export TEMPLATE_DIR="${STARFORTH_REPO}/templates"

# GPG Configuration
export GPG_KEYRING="${HOME}/.gnupg"
export GPG_KEY_ENGINE_MGR="${GPG_KEY_ENGINE_MGR:-}"  # Set to GPG key ID for Engineering Manager
export GPG_KEY_QUAL_MGR="${GPG_KEY_QUAL_MGR:-}"      # Set to GPG key ID for Quality Manager
export GPG_KEY_PM="${GPG_KEY_PM:-}"                  # Set to GPG key ID for Project Manager

# Workflow configuration
export ECR_REQUIRED_BEFORE_DEV="true"                # Require ECR approval before dev work
export FMEA_VAULT_ON_COMPLETION="true"              # Auto-vault FMEA after completion
export ECO_VAULT_ON_APPROVAL="true"                 # Auto-vault ECO after ENG_MGR approval

# Naming conventions
export ECR_ID_FORMAT="ECR-YYYY-NNN"                 # ECR-2025-001
export ECO_ID_FORMAT="ECO-YYYY-NNN"                 # ECO-2025-001
export FMEA_ID_FORMAT="FMEA-YYYY-NNN"               # FMEA-2025-001

echo "âœ“ StarForth Governance environment loaded"
echo "  STARFORTH_REPO: ${STARFORTH_REPO}"
echo "  STARFORTH_GOVERNANCE_REPO: ${STARFORTH_GOVERNANCE_REPO}"
echo "  VAULT_INBOX: ${VAULT_INBOX}"
